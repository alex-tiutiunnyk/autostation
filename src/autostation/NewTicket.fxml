<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="autostation.NewTicketController">
    <children>
        <VBox layoutX="17.0" layoutY="65.0" prefHeight="170.0" prefWidth="222.0" spacing="5.0">
            <children>
                <Label text="Name" />
                <TextField fx:id="tfNameBuy" />
                <Label text="Surname" />
                <TextField fx:id="tfSurnameBuy" />
                <Label text="Age" />
                <TextField fx:id="tfAgeBuy" />
            </children>
        </VBox>
        <Button fx:id="btnCancelTicket" layoutX="171.0" layoutY="249.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="67.0" text="Cancel" />
        <Button fx:id="btnAdmitTicket" layoutX="94.0" layoutY="249.0" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="25.0" prefWidth="67.0" text="Ok" />
        <Label layoutX="14.0" layoutY="14.0" prefHeight="17.0" prefWidth="159.0" text="Enter your info:">
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Label>
      <Label fx:id="tfErrorAge" layoutX="17.0" layoutY="227.0" prefHeight="17.0" prefWidth="222.0" text="Вік повинен бути 18+" textFill="#eb0d0d" visible="false">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
    </children>
</AnchorPane>
